@model StudentManagementSystem.Models.Student

@{
    ViewBag.Title = "Student Details";
}

<div class="container mt-5">
    <!-- Card for Student Details -->
    <div class="card shadow-lg">
        <!-- Card Header -->
        <div class="card-header bg-primary text-white text-center">
            <h2><i class="fas fa-info-circle"></i> Student Details</h2>
        </div>

        <!-- Card Body -->
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-12 text-center">
                    <h4 class="text-secondary"><i class="fas fa-id-badge"></i> Student Information</h4>
                    <hr class="border-primary" />
                </div>
            </div>

            <!-- Student Details in a Table -->
            <table class="table table-striped table-bordered">
                <tr>
                    <th><i class="fas fa-user"></i> Student Number</th>
                    <td>@Html.DisplayFor(model => model.StudentNumber)</td>
                </tr>

                <tr>
                    <th><i class="fas fa-language"></i> Name (Arabic)</th>
                    <td>@Html.DisplayFor(model => model.NameArabic)</td>
                </tr>

                <tr>
                    <th><i class="fas fa-language"></i> Name (English)</th>
                    <td>@Html.DisplayFor(model => model.NameEnglish)</td>
                </tr>

                <tr>
                    <th><i class="fas fa-image"></i> Profile Picture</th>
                    <td>
                        @if (!string.IsNullOrEmpty(Model.PicturePath))
                        {
                            <img src="@Url.Content(Model.PicturePath)" alt="Student Image" class="img-thumbnail" width="150" height="150" />
                        }
                        else
                        {
                            <span class="text-muted">No image uploaded</span>
                        }
                    </td>
                </tr>

                <tr>
                    <th><i class="fas fa-calendar-alt"></i> Date of Birth</th>
                    <td>@Html.DisplayFor(model => model.DateOfBirth)</td>
                </tr>

                <tr>
                    <th><i class="fas fa-percentage"></i> Tawjehi Average</th>
                    <td>@Html.DisplayFor(model => model.TawjehiAverage)</td>
                </tr>

                <tr>
                    <th><i class="fas fa-school"></i> School Name</th>
                    <td>@Html.DisplayFor(model => model.SchoolName)</td>
                </tr>

                <tr>
                    <th><i class="fas fa-id-card"></i> National Number</th>
                    <td>@Html.DisplayFor(model => model.NationalNumber)</td>
                </tr>

                <tr>
                    <th><i class="fas fa-atom"></i> Physics Grade</th>
                    <td>@Html.DisplayFor(model => model.PhysicsGrade)</td>
                </tr>

                <tr>
                    <th><i class="fas fa-square-root-alt"></i> Math Grade</th>
                    <td>@Html.DisplayFor(model => model.MathGrade)</td>
                </tr>
            </table>
        </div>

        <!-- Card Footer with Action Buttons -->
        <div class="card-footer text-center">
            @*<a href="@Url.Action("Edit", "Students", new { id = Model.StudentID })" class="btn btn-warning btn-lg mr-2">
                <i class="fas fa-edit"></i> Edit
            </a>*@
            <a href="@Url.Action("Index", "Students")" class="btn btn-secondary btn-lg">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

<!-- Import Bootstrap, Font Awesome -->
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
