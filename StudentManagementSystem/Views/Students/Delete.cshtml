@model StudentManagementSystem.Models.Student

@{
    ViewBag.Title = "Delete Student";
}

<div class="container mt-5">

    <!-- Card for Delete Confirmation -->
    <div class="card shadow-lg">
        <!-- Card Header -->
        <div class="card-header bg-danger text-white text-center">
            <h2><i class="fas fa-exclamation-triangle"></i> Delete Confirmation</h2>
        </div>

        <!-- Card Body -->
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-12 text-center">
                    <h4 class="text-secondary">Are you sure you want to delete this student?</h4>
                    <hr class="border-danger" />
                </div>
            </div>

            <!-- Student Details -->
            <table class="table table-bordered table-striped">
                <tr>
                    <th><i class="fas fa-id-card"></i> Student Number</th>
                    <td>@Html.DisplayFor(model => model.StudentNumber)</td>
                </tr>

                <tr>
                    <th><i class="fas fa-language"></i> Name (Arabic)</th>
                    <td>@Html.DisplayFor(model => model.NameArabic)</td>
                </tr>

                <tr>
                    <th><i class="fas fa-language"></i> Name (English)</th>
                    <td>@Html.DisplayFor(model => model.NameEnglish)</td>
                </tr>

                <tr>
                    <th><i class="fas fa-image"></i> Profile Picture</th>
                    <td>
                        @if (!string.IsNullOrEmpty(Model.PicturePath))
                        {
                            <img src="@Url.Content(Model.PicturePath)" alt="Student Image" class="img-thumbnail" width="150" height="150" />
                        }
                        else
                        {
                            <span class="text-muted">No image uploaded</span>
                        }
                    </td>
                </tr>

                <tr>
                    <th><i class="fas fa-calendar-alt"></i> Date of Birth</th>
                    <td>@Html.DisplayFor(model => model.DateOfBirth)</td>
                </tr>

                <tr>
                    <th><i class="fas fa-percentage"></i> Tawjehi Average</th>
                    <td>@Html.DisplayFor(model => model.TawjehiAverage)</td>
                </tr>

                <tr>
                    <th><i class="fas fa-school"></i> School Name</th>
                    <td>@Html.DisplayFor(model => model.SchoolName)</td>
                </tr>

                <tr>
                    <th><i class="fas fa-id-badge"></i> National Number</th>
                    <td>@Html.DisplayFor(model => model.NationalNumber)</td>
                </tr>

                <tr>
                    <th><i class="fas fa-atom"></i> Physics Grade</th>
                    <td>@Html.DisplayFor(model => model.PhysicsGrade)</td>
                </tr>

                <tr>
                    <th><i class="fas fa-square-root-alt"></i> Math Grade</th>
                    <td>@Html.DisplayFor(model => model.MathGrade)</td>
                </tr>
            </table>
        </div>

        <!-- Card Footer with Action Buttons -->
        <div class="card-footer text-center">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="fas fa-trash"></i> Delete
                </button>

                <a href="@Url.Action("Index", "Students")" class="btn btn-secondary btn-lg ml-3">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            }
        </div>
    </div>
</div>

<!-- Import Bootstrap, Font Awesome -->
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
